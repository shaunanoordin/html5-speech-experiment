dark-colour = #333
mid-dark-colour = #666
mid-colour = #999
mid-light-colour = #ccc
light-colour = #fff
primary-colour = #c33
primary-colour-faded = #600
primary-colour-highlighted = #f33

*
  box-sizing: border-box

:root
  font-family: "Lucida Console", monospace
  font-size: 16px
  background: dark-colour url("../assets/simple-bg.png")
  color: dark-colour

html
body
  padding: 0
  margin: 0
  width: 100%
  height: 100%

a
  color: primary-colour
  text-decoration: none
  
  &:hover
    color: primary-colour-highlighted

table
  width: 100%
  border-collapse: collapse
  
  td
  th
    border: 1px solid dark-colour
  
#app
  display: flex
  flex-direction: column
  width: 100%
  height: 100%
  max-width: 50em
  margin: 0 auto
  background: light-colour

#app > header
#app > footer
  flex: 0 0 auto
  padding: 1em
  background: primary-colour
  color: light-colour
  
  h1
    margin: 0
    padding: 0

#app > main
  flex: 1 1 auto
  padding: 1em
  background: light-colour
  
  #main-text
    display: block
    width: 100%
    height: 16em
    padding: 1em
    margin: 1em
    border: 1px solid dark-colour
  
  .control-panel
    display: flex
    justify-content: center
    
    .button
      background: primary-colour
      border: 1px solid mid-light-colour
      color: light-colour
      cursor: pointer
      font-size: 1em
      margin: 1em
      width: 20em
      
      &.disabled
        background: mid-colour
      
      &.active
        animation-name: primary-pulse
        animation-duration: 1s
        animation-timing-function: linear
        animation-iteration-count: infinite
        animation-direction: alternate
        
  .info-panel
    font-size: 0.8em
    padding: 0.5em 2em
    background: mid-light-colour

@keyframes primary-pulse {
    from { background-color: primary-colour-highlighted }
    to { background-color: light-colour }
}
